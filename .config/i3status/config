# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#348899"
        color_bad = "#962D3E"
        color_degraded = "#FFFFFF"
        interval = 5
}

order += "spotify"
order += "pomodoro"
order += "volume master"
# order += "disk /"
# order += "disk /home"
# order += "wireless _first_"
# order += "ethernet _first_"
order += "cpu_usage"
order += "tztime local"

pomodoro {
  format = '{mmss}'
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "%ip"
        format_down = "E"
}

volume master {
  device ="pulse:0"
  format_muted = "ðŸ”‡"
  format = "ðŸ”Š %volume"
}

cpu_usage {
  format = "%usage"
  max_threshold = 75
  degraded_threshold = 30
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "HDD %avail"
}
